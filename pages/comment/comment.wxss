/* pages/comment/comment.wxss */
.detail-container{
  height: 400rpx;
  filter: blur(40rpx);/*模糊滤镜*/
  opacity: .9;/*透明度*/
}
.detail-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top:0;
  left:0;
  z-index: -1;
}
.detail-info{
 position: absolute;
 display: flex;
 top:0;
 left: 0;
 width: 100%;
 height: 400rpx;
 padding: 20rpx;
}
.detail-img{
  width: 280rpx;
  height: 90%;
  margin-right: 24rpx;
}
.detail{
  flex-grow: 1;
  line-height: 60rpx;
}
.detail view{
  color: #fff;
  font-size: 24rpx;
}
.detail .detail-sc{
  color: #fc0;
  font-size: 36rpx;
  font-weight: 700;
}
.desc{
  padding: 20rpx;
  font-size: 24rpx;
  color: #555;
}
.comment-img{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}